{
    "key": "sign-for-task",
    "name": "Sign for task",
    "description": "Jira Addon for the sign for task",
    "baseUrl": "https://e0cf-217-196-161-49.ngrok.io",
    "authentication": {
        "type": "jwt"
    },
    "lifecycle": {
        "installed": "/installed"
    },
    "scopes": [
        "READ", "WRITE"
    ],

    "modules": {
        "jiraIssueContents": [
            {
                "icon": {
                    "width": 24,
                    "height": 24,
                    "url": "icon.png"
                },
                "target": {
                    "type": "web_panel",
                    "url": "/index.html"
                },
                "key": "signkey",

                "name": {
                    "value": "Make a signature"
                },
                "tooltip": {
                    "value": "This is a tooltip"
                }

            }
        ],

        "generalPages": [
            {
                "key": "main-page",
                "location": "system.top.navigation.bar",
                "name": {
                    "value": "Main Page"
                },
                "url": "/main",
                "conditions": [{
                    "condition": "user_is_logged_in"
                }]
            }
        ]
    }
}
